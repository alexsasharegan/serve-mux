{
	"name": "serve-mux",
	"version": "0.2.0",
	"description": "Node.js server multiplexer to route incoming HTTP requests and us promise middleware.",
	"main": "dist/index.js",
	"scripts": {
		"clean": "scripts/clean.js",
		"watch": "tsc -w",
		"prebuild": "npm run clean",
		"build": "tsc",
		"dev": "cross-env NODE_ENV=local NODE_DEBUG=http,router,route run/server.js",
		"prerelease": "npm run build && npm test",
		"release": "standard-version",
		"postrelease": "git push --follow-tags origin master && npm publish",
		"prepublishOnly": "npm run build",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
		"lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
		"test": "jest"
	},
	"files": ["lib"],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/alexsasharegan/serve-mux.git"
	},
	"keywords": ["server", "mux", "router"],
	"author": "Alex Regan <alex.joseph.regan@gmail.com> (https://github.com/alexsasharegan)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/alexsasharegan/serve-mux/issues"
	},
	"jest": {
		"moduleFileExtensions": ["ts", "tsx", "js"],
		"transform": {
			"\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"testMatch": ["**/__tests__/*.(ts|js)", "**/?(*.)(spec|test).(js|ts)"]
	},
	"homepage": "https://github.com/alexsasharegan/serve-mux#readme",
	"devDependencies": {
		"@types/jest": "^21.1.8",
		"@types/node": "^8.0.53",
		"cross-env": "^5.1.1",
		"jest": "^21.2.1",
		"release": "^2.5.6",
		"rimraf": "^2.6.2",
		"semantic": "0.0.1",
		"ts-jest": "^21.2.3",
		"tslint": "^5.8.0",
		"typescript": "^2.6.1"
	}
}
